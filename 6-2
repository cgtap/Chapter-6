#include <iostream>

using namespace std;

bool isVowel (char L);

int main() {

    char word;
cout << "Enter vowel: " ;   
    cin >> word;
    
    if (isVowel (word))
        cout << word << " is a vowel: 1" << endl;
    else 
        cout << word << " is a vowel: 0" << endl;
    

    
 
    
    return 0;
}

bool isVowel(char letter) {
    switch (letter) {
        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
        case 'A':
        case 'E':
        case 'I':
        case 'O':
        case 'U':    
            return true;
        default:
            return false;
    }
}


